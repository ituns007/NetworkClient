<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Test Fake Network Client Sync"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:background="@color/colorPrimary"
        android:onClick="clickTestFakeSync"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Test Fake Network Client Async"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:background="@color/colorPrimary"
        android:onClick="clickTestFakeAsync"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Test Okhttp Network Client"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:background="@color/colorPrimary"
        android:onClick="clickTestOkhttp"/>
</LinearLayout>